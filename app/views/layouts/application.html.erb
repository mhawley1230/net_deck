<!DOCTYPE html>
<html>
  <head>
    <title>NetDeck</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1><a href="/tournaments">NetDeck</a></h1>
    <%= form_tag(tournaments_path, method: "get", id: "search") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Card or Color" %>
      <%= submit_tag "Search", name: nil %>
    <% end %>
    <%= yield %>
  </body>
</html>
